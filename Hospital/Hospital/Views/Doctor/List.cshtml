@model DoctorListViewModel;

@{
    Layout = null;
}

<body>
    <h2>@Model.CurrentCategory</h2>
    @foreach (var doctor in Model.Doctors)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="@doctor.ImageThumbnailUrl" alt="doctor for the hospital"/>
                <div class="caption">
                    <h3 class="pull-right">@doctor.Surname</h3>
                    <h2>@doctor.Name</h2>
                    <p>@doctor.Description</p>
                </div>
                
            </div>
            
            <h4>@doctor.Category.CategoryName</h4>
        </div>
}
</body>
